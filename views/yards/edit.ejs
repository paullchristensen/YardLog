<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">
			<h1 style="text-align: center">Edit <%= yard.name %></h1>
			<form action="/yards/<%= yard._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name = "yard[name]" value="<%= yard.name %>">
				</div>
                <div class="form-group">
					<input class="form-control" type="text" name = "yard[area]" value="<%= yard.area %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name = "yard[hives]" value="<%= yard.hives %>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name = "yard[latitude]" value="<%= yard.latitude %>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name = "yard[longitude]" value="<%= yard.longitude %>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name = "yard[landOwner]" value="<%= yard.landOwner %>">
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name = "yard[description]" value="<%= yard.description %>">
                </div>
				<div class="form-group">
					<button  class="btn btn-lg btn-primary btn-block" >Submit</button>
				</div>

			</form>
			<a href = "/yards">Go Back</a>
		</div>


	</div>
</div>
<%- include("../partials/footer") %>